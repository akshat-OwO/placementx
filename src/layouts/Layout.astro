---
import Head from "../components/Head.astro";
import "../styles/globals.css";

const { className } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title="PlacementX - GGSIPU's Placement Tracker" />
    <body class="relative">
        <div
            class="fixed bottom-0 left-0 right-0 top-0 z-[-2] h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
        >
        </div>
        <div class={className}>
            <slot />
        </div>
    </body>
</html>
